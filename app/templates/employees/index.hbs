<table class="ui celled table">
	<thead>
		<tr>
			<th> ID</th>
			<th> First Name </th>
			<th> Last Name </th>
			<th> Email </th>
			<th> Category </th>
			<th> Manager </th>
		</tr>
	</thead>
	<tbody>
	{{#each model as |employee|}}
		<tr>
			<td> {{employee.id}} </td>
			<td> {{employee.firstName}} </td>
			<td> {{employee.lastName}} </td>
			<td> {{employee.email}} </td>
			<td> {{employee.category}} </td>
			<td> {{employee.manager}} </td>
		</tr>
	{{/each}}
	</tbody>
</table>

